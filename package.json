  "devDependencies": {
    "@lewebsimple/eslint-config": "^0.7.7",
    "@lewebsimple/stylelint-config": "^0.7.7",
    "@types/node": "^18.16.13",
    "eslint": "^8.40.0",
    "husky": "^8.0.3",
    "nano-staged": "^0.8.0",
