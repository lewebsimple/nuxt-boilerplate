{
  "private": true,
  "scripts": {
    "build": "nuxt build",
    "dev": "nuxt dev",
    "generate": "nuxt generate",
    "lint": "eslint --fix . && stylelint --fix \"**/*.{css,scss,vue}\"",
    "preview": "nuxt preview",
    "prepare": "husky install && nuxt prepare"
  },
  "devDependencies": {
    "@lewebsimple/eslint-config": "^0.7.7",
    "@lewebsimple/stylelint-config": "^0.7.7",
    "eslint": "^8.34.0",
    "husky": "^8.0.3",
    "nano-staged": "^0.8.0",
    "nuxt": "3.2.0",
    "stylelint": "^15.1.0",
    "typescript": "^4.9.5",
    "vue-tsc": "^1.1.0"
  },
  "eslintConfig": {
    "extends": "@lewebsimple/eslint-config"
  },
  "stylelint": {
    "extends": "@lewebsimple/stylelint-config"
  },
  "nano-staged": {
    "*.{js,ts,vue}": "eslint --fix",
    "*.{css,scss,vue}": "stylelint --fix"
  },
  "pnpm": {
    "peerDependencyRules": {
      "ignoreMissing": [
        "postcss"
      ]
    }
  }
}